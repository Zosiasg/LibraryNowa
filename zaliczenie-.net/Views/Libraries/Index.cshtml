@model IEnumerable<zaliczenie_.net.Models.Library>

@{
    ViewData["Title"] = "Books";
}

<h1>Index</h1>
@if (User.IsInRole("Libraian"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Tittle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Section)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Tittle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Section)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @if (User.IsInRole("Libraian"))
                    {
                        <a asp-action="Edit" asp-route-id="@item.idBook">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.idBook">Delete</a>
                    }
                    <a asp-action="Details" asp-route-id="@item.idBook"> Details </a>

                </td>
            </tr>
        }
    </tbody>
</table>
